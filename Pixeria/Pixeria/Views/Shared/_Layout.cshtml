<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pixeria", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["user"] == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "User")</li>
                        <li>@Html.ActionLink("Register", "Register", "User")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "User")</li>
                        <li>@Html.ActionLink("Profile", "Profile", "User")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    @if (!Request.Url.AbsoluteUri.ToString().Contains("Home/Welcome"))
    {
        <div class="container body-content">

            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Pixeria</p>
            </footer>
        </div>
    }
    else
    {
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Pixeria</p>
        </footer>
    }


    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/welcome")
    @RenderSection("scripts", required: false)
</body>
</html>
