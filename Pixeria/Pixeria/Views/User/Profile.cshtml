@model IEnumerable<Pixeria.Models.Dokument>

@{
    ViewBag.Title = "Profile";
}
@if (Session["user"] != null)
{
    <h2>Profile</h2>

    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@item.Pfad" alt="@item.Titel">
                <div class="caption">
                    <h3>@item.Titel</h3>
                    <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a> @Html.ActionLink("Delete", "Delete", "Dokument", new { id = item.Id }, new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    }
}
else
{
    Response.Redirect("~/Home/Index");
}