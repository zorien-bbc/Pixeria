
@{
    ViewBag.Title = "Welcome";
    
}


<style>
    html {
        height: 100%;
    }

    body {
        padding: 0;
        text-align: center;
        font-family: 'open sans';
        margin: 0px;
        padding:0px;
        height: 100%;
        color:white;
    }

    .wrapper {
        height: auto !important;
        height: 100%;
        margin: 0 auto;
        overflow: hidden;
    }

    .main {
        float: right;
        width: 100%;
        margin: 5% 0;
    }


    .bg {
        float:right;
        position: absolute;
        min-height: 100% !important;
        width: 100%;
        z-index: 0;
    }

    .ibg-bg {
        position: absolute;
    }

    .main {
        position: relative;
    }
    .container {
        margin:0px !important;
        padding:0px !important;
    }
    .body-content {
        margin:0px !important;
        padding:0px !important;
    }
</style>

<div class="container body-content">
    <div class="wrapper bg " data-ibg-bg="../resources/img/bg.jpg">
        <div class="main">
            <h1>Willkommen auf Pixeria</h1>
            <p>Pixeria ist eine Bild und Video Austauschplattform mit einer aktiven und grossen Community werde ein Teil davon</p>
            <a class="btn btn-large btn-info" href="/Home/Index">Los Geht's</a>
        </div>
    </div>
</div>
<script>
	  $(document).ready(function(){
       $(".bg").interactive_bg();
		});

		$(window).resize(function() {
		  $(".wrapper > .ibg-bg").css({
		    width: $(window).outerWidth(),
		    height: $(window).outerHeight()
		  })
		})

</script>